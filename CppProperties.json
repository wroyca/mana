// https://learn.microsoft.com/en-us/cpp/build/cppproperties-schema-reference?view=msvc-170

{
  "configurations": [
    {
      "name": "windows-msvc-x86 (debug)",
      "intelliSenseMode": "windows-msvc-x86",
      "compilerSwitches": "/std:c++latest",
      "inheritEnvironments": [ "msvc_x86" ],

      "includePath": [
        "${env.INCLUDE}",
        "${workspaceRoot}\\**"
      ],

      "defines": [
        "WIN32",
        "_DEBUG"
      ]
    },

    {
      "name": "windows-msvc-x86 (release)",
      "intelliSenseMode": "windows-msvc-x86",
      "compilerSwitches": "/std:c++latest",
      "inheritEnvironments": [ "msvc_x86" ],

      "includePath": [
        "${env.INCLUDE}",
        "${workspaceRoot}\\**"
      ],

      "defines": [
        "WIN32",
        "NDEBUG"
      ]
    },

    // NOTE:
    //
    // Consider disabling IntelliSense for Inactive Platforms:
    //
    // Tools > Options // > C/C++ > Advanced > Disable IntelliSense for Inactive Platforms > True
    //
    // https://devblogs.microsoft.com/cppblog/intellisense-enhancements-for-cpp-open-folder-and-cmake/#cross-platform-intellisense-squiggles
    //
    //
    {
      "name": "linux-gcc-x86 (debug)",
      "intelliSenseMode": "linux-gcc-x86",
      "compilerSwitches": "/std:c++latest",
      "inheritEnvironments": [ "mingw_64" ],

      "environments": [
        {
          "MINGW64_ROOT": "C:\\msys64\\mingw64",
          "BIN_ROOT": "${env.MINGW64_ROOT}\\bin",
          "FLAVOR": "x86_64-w64-mingw32",
          "TOOLSET_VERSION": "9.1.0",
          "PATH": "${env.MINGW64_ROOT}\\bin;${env.MINGW64_ROOT}\\..\\usr\\local\\bin;${env.MINGW64_ROOT}\\..\\usr\\bin;${env.MINGW64_ROOT}\\..\\bin;${env.PATH}",
          "INCLUDE": "${env.MINGW64_ROOT}\\include\\c++\\${env.TOOLSET_VERSION};${env.MINGW64_ROOT}\\include\\c++\\${env.TOOLSET_VERSION}\\tr1;${env.MINGW64_ROOT}\\include\\c++\\${env.TOOLSET_VERSION}\\${env.FLAVOR};",
          "environment": "mingw_64"
        }
      ],

      "includePath": [
        "${env.INCLUDE}",
        "${workspaceRoot}\\**"
      ],

      "defines": [
        "WIN32",
        "_DEBUG"
      ]
    },

    {
      "name": "linux-gcc-x86 (release)",
      "intelliSenseMode": "linux-gcc-x86",
      "compilerSwitches": "/std:c++latest",
      "inheritEnvironments": [ "mingw_64" ],

      "environments": [
        {
          "MINGW64_ROOT": "C:\\msys64\\mingw64",
          "BIN_ROOT": "${env.MINGW64_ROOT}\\bin",
          "FLAVOR": "x86_64-w64-mingw32",
          "TOOLSET_VERSION": "9.1.0",
          "PATH": "${env.MINGW64_ROOT}\\bin;${env.MINGW64_ROOT}\\..\\usr\\local\\bin;${env.MINGW64_ROOT}\\..\\usr\\bin;${env.MINGW64_ROOT}\\..\\bin;${env.PATH}",
          "INCLUDE": "${env.MINGW64_ROOT}\\include\\c++\\${env.TOOLSET_VERSION};${env.MINGW64_ROOT}\\include\\c++\\${env.TOOLSET_VERSION}\\tr1;${env.MINGW64_ROOT}\\include\\c++\\${env.TOOLSET_VERSION}\\${env.FLAVOR};",
          "environment": "mingw_64"
        }
      ],

      "includePath": [
        "${env.INCLUDE}",
        "${workspaceRoot}\\**"
      ],

      "defines": [
        "WIN32",
        "NDEBUG"
      ]
    }
  ]
}
